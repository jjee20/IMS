<ContentDialog
    x:Class="RavenTechV2.Views.VendorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    Title="{Binding DialogTitle, Mode=OneWay}"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <Grid x:Name="ContentArea">
        <StackPanel Spacing="12">
            <TextBlock Text="Vendor Name"/>
            <TextBox Text="{Binding  Vendor.Name, Mode=TwoWay}" />

            <TextBlock Text="Vendor Type"/>
            <editors:SfComboBox 
                    ItemsSource="{Binding VendorTypes}"
                    SelectedItem="{Binding SelectedVendorType, Mode=TwoWay}"
                    DisplayMemberPath="Description"
                    AutoAppendType="Text"
                    IsEditable="False" />

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding  Vendor.Email, Mode=TwoWay}" />

            <TextBlock Text="Phone"/>
            <TextBox Text="{Binding  Vendor.Phone, Mode=TwoWay}" />

            <TextBlock Text="Address"/>
            <TextBox TextWrapping="Wrap" IsSpellCheckEnabled="True"
                SelectionHighlightColor="Green"  Text="{Binding  Vendor.Address, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</ContentDialog>
