<ContentDialog
    x:Class="RavenTechV2.Views.CategoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    Title="{Binding DialogTitle, Mode=OneWay}"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    IsPrimaryButtonEnabled="{Binding IsFormValid}"
    DefaultButton="Primary">

    <Grid x:Name="ContentArea">
        <StackPanel Spacing="12">
            <TextBox Header="Name*" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Foreground="Red" Text="{Binding NameError}" />

            <TextBox Header="Description" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Foreground="Red" Text="{Binding DescriptionError}" />
        </StackPanel>
    </Grid>
</ContentDialog>
