<ContentDialog
    x:Class="RavenTechV2.Views.WarehouseDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    Title="{Binding DialogTitle, Mode=OneWay}"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <Grid x:Name="ContentArea">
        <StackPanel Spacing="12">
            <TextBlock Text="Warehouse Name"/>
            <TextBox Text="{Binding  Warehouse.Name, Mode=TwoWay}" />

            <TextBlock Text="Warehouse Type"/>
            <editors:SfComboBox 
                    ItemsSource="{Binding Branches}"
                    SelectedItem="{Binding SelectedBranch, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    AutoAppendType="Text"
                    IsEditable="False" />

            <TextBlock Text="Description"/>
            <TextBox TextWrapping="Wrap" IsSpellCheckEnabled="True"
                SelectionHighlightColor="Green"  Text="{Binding  Warehouse.Description, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</ContentDialog>
