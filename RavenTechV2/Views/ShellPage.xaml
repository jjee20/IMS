<Page
    x:Class="RavenTechV2.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:RavenTechV2.Helpers"
    xmlns:behaviors="using:RavenTechV2.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity" xmlns:syncfusion="using:Syncfusion.UI.Xaml.Core"
    Loaded="OnLoaded">

    <Grid>

        <InfoBar
        x:Name="NotificationBar"
        IsOpen="{Binding Notifier.IsOpen, Mode=OneWay}"
        Message="{Binding Notifier.Message, Mode=OneWay}"
        Severity="{Binding Notifier.Severity, Mode=OneWay}"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,12,0,0"
        Width="350"/>

        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="48"
              IsHitTestVisible="True"
              VerticalAlignment="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="*"/>
                <!-- Title & InfoBar -->
                <ColumnDefinition Width="Auto"/>
                <!-- Profile Button -->
            </Grid.ColumnDefinitions>
            <!-- App Icon -->
            <Image Grid.Column="0"
           Source="/Assets/RavenTech.ico"
           HorizontalAlignment="Left"
           Width="24"
           Height="24" 
                   Tapped ="Image_Tapped"
           />

            <!-- App Title and InfoBar -->
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock
                   VerticalAlignment="Center"
                   TextWrapping="NoWrap"
                   Style="{StaticResource CaptionTextBlockStyle}"
                           Text="RavenTech"
                   Margin="8,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0,0,145,0">

                <syncfusion:SfAvatarView 
        x:Name="AvatarControl"
        ContentType="Initials" 
        InitialsType="DoubleCharacter"
        IsEnabled="True"
        AvatarName="Alex Davis" 
        AvatarShape="Circle"
        AvatarSize="Small"
        Visibility="Collapsed"
        PointerPressed="AvatarControl_PointerPressed"/>

                <!-- Hidden Button to Show MenuFlyout on Avatar Tap -->
                <Button x:Name="HiddenFlyoutLauncher"
            Visibility="Collapsed">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Personal"/>
                            <MenuFlyoutItem Text="School"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Sign out"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>
