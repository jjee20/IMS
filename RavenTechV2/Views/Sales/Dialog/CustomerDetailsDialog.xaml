<ContentDialog
    x:Class="RavenTechV2.Views.CustomerDetailsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    Title="Customer Details"
    CloseButtonText="Cancel">

    <Grid x:Name="ContentArea" Padding="24">
        <Border
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        CornerRadius="12"
        BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
        BorderThickness="1"
        Padding="24"
        Shadow="{ThemeResource CommandBarFlyoutOverflowShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" 
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Customer.CustomerId}" 
                       VerticalAlignment="Center" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" 
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Customer.Name}" 
                       VerticalAlignment="Center" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" 
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Customer.Email}" 
                       VerticalAlignment="Center" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone:" 
                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Customer.Phone}" 
                       VerticalAlignment="Center" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Order Count:" FontWeight="Bold" Margin="0,0,8,8"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Customer.SalesOrders.Count}" Margin="0,0,0,8"/>
            </Grid>
        </Border>
    </Grid>

</ContentDialog>
