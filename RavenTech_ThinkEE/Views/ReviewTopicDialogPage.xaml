<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="RavenTech_ThinkEE.Views.ReviewTopicDialogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RavenTech_ThinkEE.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Bind DialogTitle, Mode=OneWay}"
    mc:Ignorable="d"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel">

    <Grid>
        <StackPanel Spacing="12">
            <TextBlock Text="Code"/>
            <TextBox Text="{x:Bind ReviewTopic.Code, Mode=TwoWay}" />

            <TextBlock Text="Name"/>
            <TextBox Text="{x:Bind ReviewTopic.Name, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</ContentDialog>
